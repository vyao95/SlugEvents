<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".DiscoverEventsScreen">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        tools:context=".DiscoverEventsScreen">

        <Button
            android:id="@+id/funTagBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setFun"
            android:text="Fun"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"/>

        <Button
            android:id="@+id/socialTagBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setSocial"
            android:text="Social"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"/>

        <Button
            android:id="@+id/educationTagBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setEducation"
            android:text="Education"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"/>

        <Button
            android:id="@+id/allTagBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setAll"
            android:text="All"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"/>

    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>